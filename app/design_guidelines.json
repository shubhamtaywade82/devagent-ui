{
  "name": "Cyber-Physical Design System",
  "description": "Dark theme with violet/blue accents for DevAgent",
  "colors": {
    "base": {
      "zinc-950": "#09090b",
      "zinc-900": "#18181b",
      "zinc-800": "#27272a",
      "zinc-700": "#3f3f46",
      "zinc-600": "#52525b",
      "zinc-500": "#71717a",
      "zinc-400": "#a1a1aa",
      "zinc-300": "#d4d4d8",
      "zinc-200": "#e4e4e7",
      "zinc-100": "#f4f4f5",
      "zinc-50": "#fafafa"
    },
    "accent": {
      "violet-600": "#7c3aed",
      "violet-500": "#8b5cf6",
      "violet-400": "#a78bfa",
      "blue-600": "#2563eb",
      "blue-500": "#3b82f6",
      "blue-400": "#60a5fa"
    }
  },
  "typography": {
    "fontFamilies": {
      "heading": "Manrope, sans-serif",
      "body": "Inter, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "sizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "weights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "effects": {
    "glassmorphism": {
      "background": "rgba(24, 24, 27, 0.7)",
      "backdropFilter": "blur(10px)",
      "border": "1px solid rgba(139, 92, 246, 0.2)"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)"
    }
  },
  "layout": {
    "grid": "Control Room Grid (File Tree | Editor | AI Chat)",
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  }
}

